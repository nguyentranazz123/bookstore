@using Microsoft.AspNetCore.Identity;
@model IEnumerable<User>


@{
    ViewData["Title"] = "All users";

}

<h1>All Users</h1>



@if (Model.Any())
{
    <table class="table col-3">
        <thead>
            <tr>
                <td><h5>FirstName</h5></td>
                <td><h5>LastName</h5></td>
                <td><h5>Address</h5></td>
                <td><h5>Email</h5></td>

                <td></td>
            </tr>
        </thead>
        @foreach (var user in Model)
        {
            <tbody>
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Address</td>
                    <td>@user.Email</td>

                    <td class="text-center">

                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash-can">Delete</i></a>
                        <a asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash-can">Reset Password</i></a>

                    </td>
                </tr>
            </tbody>
        }
    </table>
}
else
{
    <h5>No roles yet, use the button above to add your first role.</h5>
}