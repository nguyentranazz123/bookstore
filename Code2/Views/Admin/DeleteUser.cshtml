@using Microsoft.AspNetCore.Identity
@model IdentityUser

<h3> You are about to delete the user"@Model.UserName"</h3>
<h6>This action can't be undone</h6>

<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" asp-action="ConfirmDeleteUser" asp-route-id="@Model.Id" class="mt-3">
    <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i>Delete</button>
    <div class="mt-2">
        <a asp-action="ListAllUsers" class="btn btn-danger">Cancel</a>
    </div>
</form>