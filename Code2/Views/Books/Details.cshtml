@model Code2.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Author Name <!-- Change the display name -->
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Name) <!-- Access Author's Name property -->
        </dd>
        <dt class="col-sm-2">
            Genre Name <!-- Change the display name -->
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name) <!-- Access Genre's Name property -->
        </dd>
        <dd>
            <img src="~/images/@Model.Image" height="150" />
            <br />@Model.Image

        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("StoreOwner"))
    {
        <p><a asp-action="Edit" asp-route-id="@Model?.Id">Edit </a> | </p>
    } 
    <a asp-controller="Home" asp-action="Index">Back to List </a> |
    @if (@User.IsInRole("Customer"))
    {
        <p><a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model?.Id">Add to Cart</a> |</p>
    }
    
</div>
